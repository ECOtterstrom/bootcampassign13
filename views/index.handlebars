<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <img src="/assets/img/newburger.png" width="200" height="200" alt="burger" id="burger-pic">
    <h1 class="title">Eat-Da-Burger!</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">What burger do you want to eat?</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
              {{burger_name}}
              <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
                DEVOUR IT!
              </button>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Which burgers have you eaten?</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          <li>
            {{burger_name}}
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Enter a burger you want to eat, then click "Submit."</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
          </div>

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
</form>