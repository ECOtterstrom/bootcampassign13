<h1>Eat-Da-Burger!</h1>

<h2>What Burger do you want to eat?</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
	  {{burger_name}}

      <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
       {{#if devoured}}DEVOURED TIME!{{else}}Devour it!{{/if}}
      </button>

      <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>What Burgers have you eaten?</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
	  {{burger_name}}

	    
</li>
  {{/if}}
  {{/each}}
</ul>

<h2>Enter a burger you want to eat, then click "Submit"</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" checked>Devoured!<br>
    <input type="radio" name="devoured" value="0">Not Devoured
  </div>

  <button type="submit">Submit</button>
</form>